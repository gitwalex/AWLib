<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pbDlg_db_ftp"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etDBServerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/dbServerURL"
            android:inputType="text"/>

        <EditText
            android:id="@+id/etDBUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/dbServerUID"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/etDBUserPW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/dbServerPW"
            android:inputType="textPassword"/>

        <LinearLayout
            android:id="@+id/llServerError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dbServerMessage"
                android:textAppearance="@style/TextViewMain.Medium"/>

            <TextView
                android:id="@+id/tvServerError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/TextViewMain.Medium"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>