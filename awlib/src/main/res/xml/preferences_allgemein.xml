<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/dbTitleDatenbank">
        <Preference
            android:key="@string/pkDBVacuum"
            android:summary="@string/dbSmryDBVacuum"
            android:title="@string/dbTitleDBVacuum"
            />
        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="@string/dbSavePeriodic"
            android:summary="@string/smryDBSavePeriodic"
            android:title="@string/titleDBSavePeriodic"
            />
        <Preference
            android:key="@string/pkDBSave"
            android:title="@string/actionDatenbankSichern"
            />
        <Preference
            android.summary="@string/dbSmryDatenbankRestore"
            android:key="@string/pkDBRestore"
            android:title="@string/actionDatenbankRestore"
            />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/dbExterneSicherung">
        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="@string/dbExterneSicherung"
            android:summary="@string/dbExterneSicherung"
            android:title="@string/titleExterneSicherung"
            />
        <Preference
            android:dependency="@string/dbExterneSicherung"
            android:key="@string/dbServerURL"
            android:title="@string/dbServerURL"
            />
        <Preference
            android:dependency="@string/dbExterneSicherung"
            android:key="@string/dbServerUID"
            android:title="@string/dbServerUID"
            />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/MonMaInfo">
        <Preference
            android:key="@string/MonMaAbout"
            android:title="@string/MonMaAbout"
            />
        <Preference
            android:key="@string/MonMaCopyright"
            android:title="@string/MonMaCopyright"
            />
        <Preference
            android:key="@string/BuildInfo"
            android:title="@string/BuildInfo"
            />
    </PreferenceCategory>
</PreferenceScreen>